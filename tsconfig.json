{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@astro/*": ["src/html/*"],
      "@layouts/*": ["src/html/layouts/*"],
      "@components/*": ["src/html/components/*"],
      "@/*": ["src/*"],
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "out",
    "tmp"
  ]
}