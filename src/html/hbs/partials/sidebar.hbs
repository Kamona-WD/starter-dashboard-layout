<!-- Sidebar overlay -->
<div
    x-show.in.out.opacity="isSidebarOpen"
    @click="isSidebarOpen = false"
    class="fixed inset-0 z-10 bg-black/60 backdrop-blur-lg lg:hidden"
></div>

<!-- Sidebar -->
<aside
    x-transition:enter="transition transform duration-300"
    x-transition:enter-start="-translate-x-full opacity-30  ease-in"
    x-transition:enter-end="translate-x-0 opacity-100 ease-out"
    x-transition:leave="transition transform duration-300"
    x-transition:leave-start="translate-x-0 opacity-100 ease-out"
    x-transition:leave-end="-translate-x-full opacity-0 ease-in"
    class="fixed inset-y-0 z-10 flex max-h-screen w-64 flex-shrink-0 transform flex-col overflow-hidden border-r bg-white shadow-lg transition-all lg:sticky lg:top-0 lg:z-auto lg:shadow-none"
    :class="{'-translate-x-full lg:translate-x-0 lg:w-20': !isSidebarOpen}"
>
    <!-- sidebar header -->
    <div class="flex flex-shrink-0 items-center justify-between p-2" :class="{'lg:justify-center': !isSidebarOpen}">
        <span class="whitespace-nowrap p-2 text-xl font-semibold uppercase leading-8 tracking-wider">
            K<span :class="{'lg:hidden': !isSidebarOpen}">-WD</span>
        </span>
        <button @click="toggleSidbarMenu()" class="rounded-md p-2 lg:hidden">
            <svg
                class="h-6 w-6 text-gray-600"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>
    <!-- Sidebar links -->
    <nav class="flex-1 overflow-hidden hover:overflow-y-auto">
        <ul class="overflow-hidden p-2">
            <li>
                <a
                    href="#"
                    class="flex items-center space-x-2 rounded-md p-2 transition-colors hover:bg-black hover:text-white"
                    :class="{'justify-center': !isSidebarOpen}"
                >
                    <span>
                        <svg
                            class="h-6 w-6 text-gray-400"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                            />
                        </svg>
                    </span>
                    <span :class="{ 'lg:hidden': !isSidebarOpen }">Dashboard</span>
                </a>
            </li>
            
            <!-- Sidebar Links... -->
        </ul>
    </nav>

    <!-- Sidebar footer -->
    <div class="max-h-14 flex-shrink-0 border-t p-2">
        <button
            class="flex w-full items-center justify-center gap-1 rounded-md border bg-black text-white px-4 py-2 transition-colors hover:bg-gray-800 font-medium focus:outline-none focus:ring focus:ring-black focus:ring-offset-2 focus:ring-offset-white"
        >
            <span aria-hidden="true" class="iconify h-6 w-6 tabler--sparkles"></span>

            <span :class="{'lg:hidden': !isSidebarOpen}"> Quick Actions </span>
        </button>
    </div>
</aside>
