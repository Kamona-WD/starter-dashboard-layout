<div
    @keydown.escape.window="$store.search.close()"
    :class="{ 'z-40': $store.search.isOpen }"
    class="relative h-auto w-auto"
>
    <template x-teleport="body">
        <div
            x-show="$store.search.isOpen"
            class="fixed inset-0 z-[99] flex h-screen w-screen items-start justify-center sm:py-10"
            x-cloak
        >
            <div
                x-show="$store.search.isOpen"
                x-transition:enter="ease-out duration-300"
                x-transition:enter-start="opacity-0"
                x-transition:enter-end="opacity-100"
                x-transition:leave="ease-in duration-300"
                x-transition:leave-start="opacity-100"
                x-transition:leave-end="opacity-0"
                @click="$store.search.close()"
                class="absolute inset-0 h-full w-full bg-black/50 backdrop-blur-lg"
            ></div>

            <div
                x-show="$store.search.isOpen"
                x-trap.inert.noscroll="$store.search.isOpen"
                x-transition:enter="ease-out duration-300"
                x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                x-transition:leave="ease-in duration-200"
                x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                class="w-full z-[99] bg-white shadow-lg sm:max-w-lg sm:rounded-md"
            >
                <div class="relative sm:rounded-t-md border-b border-black overflow-hidden text-gray-500 focus-within:text-gray-900 dark:focus-within:text-gray-400">
                    <div aria-hidden="true" class="pointer-events-none absolute inset-y-0 flex items-center px-4">
                        <span class="iconify h-5 w-5 tabler--search"></span>
                    </div>

                    <input
                        id="search"
                        type="text"
                        name="search"
                        placeholder="Search..."
                        autocomplete="off" 
                        autocorrect="off" 
                        spellcheck="false"
                        class="flex w-full py-4 pl-10 pr-16 bg-transparent border-0 rounded-md outline-none focus:outline-none focus:ring-0 focus:border-0 placeholder:text-neutral-400 h-11 disabled:cursor-not-allowed disabled:opacity-50"
                    />

                    <button 
                        type="button"
                        @click="$store.search.close()"
                        class="absolute bg-black text-white transition-colors inset-y-0 right-0 flex items-center px-4 hover:bg-gray-800"
                    >
                        <span class="sr-only">Close</span>
                        <span aria-hidden="true" class="iconify h-5 w-5 tabler--x"></span>
                    </button>
                </div>

                <div class="p-4 max-h-[320px] bo overflow-y-auto overflow-x-hidden">
                    <div class="pb-1 space-y-1">
                        <div class="px-1 overflow-hidden text-gray-700">
                            <div class="px-2 py-1 my-1 text-xs font-medium text-neutral-500">
                                Category
                            </div>
                        </div>
                        
                        <div class="px-1">
                            <div class="relative flex gap-1 cursor-default select-none items-center rounded-md px-2 py-1.5 text-sm outline-none data-[disabled]:pointer-events-none data-[disabled]:opacity-50">
                                <span aria-hidden="true" class="iconify tabler--circle"></span>
                                <span>Item title</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>
</div>
